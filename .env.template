# Environment Variables Template for MCP Server OpenAI
# IMPORTANT: 
# 1. Copy this file to .env and fill in your actual values
# 2. NEVER commit .env file to version control
# 3. For production, use GCP Secret Manager instead

# ================================
# Required API Keys
# ================================

# OpenAI API Key (required)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude API Key (optional)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ================================
# Optional API Keys
# ================================

# Google API Key (for enhanced features)
GOOGLE_API_KEY=your_google_api_key_here

# Brave Search API Key (for MCP server integration)
BRAVE_SEARCH_API_KEY=your_brave_search_api_key_here

# ================================
# Image Generation APIs
# ================================

# Unsplash API (for image generation)
UNSPLASH_ACCESS_KEY=your_unsplash_access_key_here
UNSPLASH_SECRET_ACCESS_KEY=your_unsplash_secret_here
UNSPLASH_APPLICATION_ID=your_unsplash_app_id_here

# Pixabay API Key
PIXABAY_API_KEY=your_pixabay_api_key_here

# Stable Diffusion API Key
STABLE_DIFFUSION_API_KEY=your_stable_diffusion_api_key_here

# ================================
# Icon Generation APIs
# ================================

ICONIFY_API_KEY=your_iconify_api_key_here
LUCIDE_API_KEY=your_lucide_api_key_here

# ================================
# Presentation APIs
# ================================

PRESENTON_API_KEY=your_presenton_api_key_here

# ================================
# MCP Server Configuration
# ================================

# GitHub Personal Access Token
GITHUB_TOKEN=your_github_token_here

# Database URLs
POSTGRES_URL=postgresql://user:password@localhost:5432/dbname
MYSQL_URL=mysql://user:password@localhost:3306/dbname
SQLITE_PATH=./data/database.db

# ================================
# Application Configuration
# ================================

# Server Configuration
PORT=8000
HOST=0.0.0.0
ENVIRONMENT=development
LOG_LEVEL=INFO

# MCP Configuration
MCP_CONFIG_PATH=./config.yaml

# ================================
# Monitoring & Rate Limiting
# ================================

# Cost Monitoring
MCP_MONITORING_ENABLED=true
MCP_COST_HOURLY_MAX=10.0
MCP_COST_DAILY_MAX=100.0
MCP_COST_PER_REQUEST_MAX=1.0

# Rate Limiting
MCP_RATE_LIMITING_ENABLED=true
MCP_REFRESH_INTERVAL=30.0

# ================================
# GCP Deployment Configuration
# ================================

# Google Cloud Project Settings (for Cloud Run)
PROJECT_ID=your-gcp-project-id
REGION=us-central1
SERVICE_NAME=mcp-server-openai

# Cloud SQL (if using managed database)
CLOUD_SQL_CONNECTION_NAME=your-project:region:instance

# ================================
# Security Settings
# ================================

# JWT Secret for authentication (generate a strong random string)
JWT_SECRET=your-jwt-secret-here

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# ================================
# Development Settings
# ================================

# Debug mode (only for development)
DEBUG=false

# Database debug logging
DB_ECHO=false